<div class="product-card">
  <div class="card-info">
    <a href="{{ product_product.url }}">
    {{ product_product.title }}
    <span>{{ product_product.price | money_without_trailing_zeros }}</span>
  </a>
  <p>{{ product_product.description |  strip_html | split: '.' | first | append: '.' }}</p>
    {% if product_product.variants.size > 1 %}
      {{ 'product.card.options' | t: optionCount: product_product.variants.size }} &mdash;
    {% endif %}

    {% if product_product.available %}
      <a href="{{ product_product.url }}">{{ 'product.card.more_info' | t }}</a>
    {% else %}
      {{ 'product.form.sold_out' | t }}
    {% endif %}
  </div>

  <div class="card-image">

  <a href="{{ product_product.url }}">
    <img width="1200" height="900px" src="{{ product_product.featured_image | image_url }}" alt="{{ product_product.featured_image.alt | escape }}" loading="lazy" />
  </a>
  </div>

 
</div>