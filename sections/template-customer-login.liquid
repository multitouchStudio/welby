<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 " x-data="{LoginForm: true , pwRecoverFoam: false}">
  <div class="max-w-md w-full space-y-8" x-show="LoginForm">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign In</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-500 bg-red-100 text-red-800 px-4 py-3 " role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>

        {% endif %}
        <div class="my-2">
          <label for="email-address" class=" sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email-address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border "
            placeholder="Enter your Email">
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label for="password" class=" sr-only">password</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="password"
              class="relative block w-full px-3 py-2 border "
              placeholder="Enter your password">
          </div>



        {% endif %}
        <div class="my-2 text-sm" x-on:click="{pwRecoverFoam= true ; LoginForm= false}">
          <a href="#" class=" underline text-gray-500 hover:text-gray-900">Forget your Password</a>
        </div>
        <div>
          <button type="submit" class="relative block w-full px-3 py-2 border font-medium text-white bg-gray-500 hover:bg-gray-900 ">
            Sign IN
          </button>
        </div>

      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="mt-8">
      <div>
        <h1 class="text-center text-xl font-bold mt-6">Continue as a Guest</h1>
      </div>
      {% form 'guest_login' %}
        <div>
          <button type="submit" class="relative block w-full px-3 py-2 border font-medium text-white bg-gray-500 hover:bg-gray-900 ">
            continue
          </button>
        </div>

      {% endform %}

    {% endif %}
  </div>

  <div class="max-w-md w-full space-y-8" x-show="pwRecoverFoam">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your Password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-500 bg-red-100 text-red-800 px-4 py-3 " role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>

        {% endif %}
        <div class="my-2">
          <label for="email" class=" sr-only">Email address</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border "
            placeholder="Enter your Email">
        </div>
        <div class="my-2 text-sm" x-on:click="{pwRecoverFoam= false ; LoginForm= true}">
          <a href="#" class=" underline text-gray-500 hover:text-gray-900">Back to Login</a>
        </div>

        <div>
          <button type="submit" class="relative block w-full px-3 py-2 border font-medium text-white bg-gray-500 hover:bg-gray-900 ">
            Recover Password
          </button>
        </div>



      {% endform %}
    </div>
  </div>
</div>